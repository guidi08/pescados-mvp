{
  "colors": {
    "brand": {
      "primary": "#EA1D2C",
      "primaryDark": "#C91522",
      "primaryLight": "#FEEAEC",
      "secondary": "#0B2340",
      "secondaryLight": "#E8EEF6"
    },
    "neutral": {
      "0": "#FFFFFF",
      "50": "#F7F8FA",
      "100": "#EEF0F3",
      "200": "#D9DEE5",
      "300": "#B6BEC9",
      "400": "#8E98A6",
      "500": "#6B7687",
      "600": "#4B5565",
      "700": "#2F3847",
      "800": "#1F2733",
      "900": "#0F1720"
    },
    "background": {
      "app": "#F7F8FA",
      "surface": "#FFFFFF",
      "elevated": "#FFFFFF"
    },
    "text": {
      "primary": "#0F1720",
      "secondary": "#4B5565",
      "tertiary": "#6B7687",
      "inverse": "#FFFFFF",
      "link": "#EA1D2C"
    },
    "border": {
      "subtle": "#EEF0F3",
      "default": "#D9DEE5",
      "strong": "#B6BEC9",
      "focus": "#EA1D2C"
    },
    "semantic": {
      "success": "#1B9A59",
      "successBg": "#E7F7EE",
      "error": "#D92D20",
      "errorBg": "#FEECEB",
      "warning": "#F79009",
      "warningBg": "#FFF4E5",
      "info": "#2E90FA",
      "infoBg": "#EAF3FF"
    },
    "badges": {
      "freshBg": "#E6F7F8",
      "freshText": "#0A5A61",
      "frozenBg": "#EAF3FF",
      "frozenText": "#175CD3",
      "variableBg": "#EEF0F3",
      "variableText": "#2F3847",
      "b2cBg": "#E7F7EE",
      "b2cText": "#1B9A59",
      "b2bBg": "#FFF4E5",
      "b2bText": "#B54708"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": "Inter",
      "sansFallback": "System"
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "sizes": {
      "10": 10,
      "12": 12,
      "14": 14,
      "16": 16,
      "18": 18,
      "20": 20,
      "24": 24,
      "28": 28,
      "32": 32
    },
    "lineHeights": {
      "12": 16,
      "14": 20,
      "16": 24,
      "18": 26,
      "20": 28,
      "24": 32,
      "32": 40
    },
    "styles": {
      "display": {
        "fontSize": 32,
        "lineHeight": 40,
        "fontWeight": 700
      },
      "h1": {
        "fontSize": 24,
        "lineHeight": 32,
        "fontWeight": 700
      },
      "h2": {
        "fontSize": 20,
        "lineHeight": 28,
        "fontWeight": 600
      },
      "h3": {
        "fontSize": 18,
        "lineHeight": 26,
        "fontWeight": 600
      },
      "body": {
        "fontSize": 16,
        "lineHeight": 24,
        "fontWeight": 400
      },
      "bodyStrong": {
        "fontSize": 16,
        "lineHeight": 24,
        "fontWeight": 600
      },
      "small": {
        "fontSize": 14,
        "lineHeight": 20,
        "fontWeight": 400
      },
      "smallStrong": {
        "fontSize": 14,
        "lineHeight": 20,
        "fontWeight": 600
      },
      "label": {
        "fontSize": 12,
        "lineHeight": 16,
        "fontWeight": 600
      },
      "caption": {
        "fontSize": 12,
        "lineHeight": 16,
        "fontWeight": 400
      }
    }
  },
  "spacing": {
    "0": 0,
    "1": 4,
    "2": 8,
    "3": 12,
    "4": 16,
    "5": 20,
    "6": 24,
    "7": 32,
    "8": 40,
    "9": 48,
    "10": 56,
    "11": 64
  },
  "radius": {
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 20,
    "pill": 999
  },
  "shadow": {
    "none": {
      "shadowColor": "#000000",
      "shadowOpacity": 0,
      "shadowRadius": 0,
      "shadowOffset": {
        "width": 0,
        "height": 0
      },
      "elevation": 0
    },
    "sm": {
      "shadowColor": "#0F1720",
      "shadowOpacity": 0.06,
      "shadowRadius": 8,
      "shadowOffset": {
        "width": 0,
        "height": 2
      },
      "elevation": 2
    },
    "md": {
      "shadowColor": "#0F1720",
      "shadowOpacity": 0.1,
      "shadowRadius": 16,
      "shadowOffset": {
        "width": 0,
        "height": 6
      },
      "elevation": 6
    },
    "lg": {
      "shadowColor": "#0F1720",
      "shadowOpacity": 0.14,
      "shadowRadius": 24,
      "shadowOffset": {
        "width": 0,
        "height": 12
      },
      "elevation": 12
    }
  },
  "components": {
    "button": {
      "height": {
        "sm": 40,
        "md": 48
      },
      "paddingX": {
        "sm": 12,
        "md": 16
      },
      "radius": "md",
      "textStyle": {
        "sm": "smallStrong",
        "md": "bodyStrong"
      },
      "variants": {
        "primary": {
          "bg": "{colors.brand.primary}",
          "text": "{colors.text.inverse}",
          "bgPressed": "{colors.brand.primaryDark}",
          "bgDisabled": "{colors.neutral.200}",
          "textDisabled": "{colors.neutral.500}"
        },
        "secondary": {
          "bg": "{colors.background.surface}",
          "text": "{colors.text.primary}",
          "border": "{colors.border.default}",
          "bgPressed": "{colors.neutral.50}",
          "bgDisabled": "{colors.neutral.100}",
          "textDisabled": "{colors.neutral.500}"
        },
        "ghost": {
          "bg": "transparent",
          "text": "{colors.brand.primary}",
          "bgPressed": "{colors.brand.primaryLight}",
          "textDisabled": "{colors.neutral.500}"
        },
        "destructive": {
          "bg": "{colors.semantic.error}",
          "text": "{colors.text.inverse}",
          "bgPressed": "#B42318",
          "bgDisabled": "{colors.neutral.200}",
          "textDisabled": "{colors.neutral.500}"
        }
      }
    },
    "input": {
      "height": 48,
      "paddingX": 14,
      "radius": "md",
      "bg": "{colors.background.surface}",
      "border": "{colors.border.default}",
      "borderFocus": "{colors.border.focus}",
      "borderError": "{colors.semantic.error}",
      "text": "{colors.text.primary}",
      "placeholder": "{colors.neutral.400}",
      "helper": "{colors.text.secondary}"
    },
    "card": {
      "radius": "lg",
      "bg": "{colors.background.surface}",
      "border": "{colors.border.subtle}",
      "padding": 16,
      "shadow": "sm"
    },
    "badge": {
      "radius": "pill",
      "paddingX": 10,
      "paddingY": 6,
      "textStyle": "label"
    },
    "chip": {
      "radius": "pill",
      "paddingX": 12,
      "paddingY": 8,
      "textStyle": "smallStrong",
      "bg": "{colors.neutral.100}",
      "text": "{colors.text.primary}",
      "bgSelected": "{colors.brand.primaryLight}",
      "textSelected": "{colors.brand.primaryDark}"
    },
    "tabBar": {
      "height": 64,
      "bg": "{colors.background.surface}",
      "borderTop": "{colors.border.subtle}",
      "iconSize": 24,
      "labelStyle": "label"
    }
  }
}